{% extends 'templates/app.twig' %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5>Categories</h5>
                    <ul>
                        <li>
                            Electronics
                            <ul>
                                <li>Phones</li>
                                <li>Tables</li>
                                <li>PCs</li>
                            </ul>
                        </li>
                        <li>
                            Furnitures
                            <ul>
                                <li>Shelves</li>
                                <li>Chairs</li>
                                <li>Tables</li>
                            </ul>
                        </li>
                        <li>
                            Appliances
                            <ul>
                                <li>TVs</li>
                                <li>Blue Ray</li>
                                <li>DVD</li>
                                <li>Dish Washers</li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            {% if products.count() %}
                <div class="row mb-3">
                    {% for index, product in products %}
                        <div class="col-md-4">
                            <div class="card shadow">
                                <img src="{{ product.image }}" alt="{{ product.title }} Image" class="card-image-top">
                                <div class="card-body">
                                    <h5>{{ product.title }}</h5>
                                    <p>{{ product.description }}</p>
                                    <a href="{{ path_for('products.show', {slug: product.slug}) }}" class="btn btn-primary">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                        {% if (index + 1) % 3 == 0 %}
                            </div>
                            <div class="row mb-3">
                        {% endif %}
                    {% endfor %}
                </div>
            {% else %}
                <p>No products</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
