{% extends 'templates/app.twig' %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">

        </div>

        <div class="col-md-10">
            {% if products.count() %}
                <div class="row mb-3">
                    {% for index, product in products %}
                        <div class="col-md-3">
                            <div class="card shadow-sm mt-2">
                                <img src="{{ product.image }}" alt="{{ product.title }} Image" class="card-image-top">
                                <div class="card-body">
                                    <h5 class="card-title">{{ product.name }}</h5>
                                    <a href="{{ path_for('products.show', {slug: product.slug}) }}" class="btn btn-primary">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                        {% if (index + 1) % 4 == 0 %}
                            </div>
                            <div class="row">
                        {% endif %}
                    {% endfor %}
                </div>
            {% else %}
                <p>No products</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
