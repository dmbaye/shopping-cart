{% extends 'templates/app.twig' %}

{% block content %}
<div class="container-fluid">
    <h1>Order #{{ order.id }}</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Shipping to</div>
                <div class="card-body">
                    <p>Address 1: {{ order.address.address1 }}</p>
                    <p>Address 2: {{ order.address.address2 }}</p>
                    <p>City: {{ order.address.city }}</p>
                    <p>Postal Code: {{ order.address.postal_code }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Items</div>
                <div class="card-body">
                    <table class="table mb-4">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for product in order.products %}
                                <tr>
                                    <td>
                                        <a href="{{ path_for('products.show', {slug: product.slug}) }}">
                                        {{ product.name }}
                                        </a>
                                    </td>
                                    <td>{{ product.pivot.quantity }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                    <table class="table">
                        <tr>
                            <td class="bg-success text-white">
                                Total
                            </td>
                            <td class="bg-success text-white">
                                ${{ order.total|number_format(2) }}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
