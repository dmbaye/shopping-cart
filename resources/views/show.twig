{% extends 'templates/app.twig' %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <img src="{{ product.image }}" alt="{{ product.title }} Image" class="img-fluid rounded shadow">
        </div>

        <div class="col-md-8">
            {% include 'partials/status.twig' %}

            <h1>{{ product.title }}</h1>
            <p>{{ product.description }}</p>

            {% if product.inStock() %}
                <a href="{{ path_for('cart.store', {slug: product.slug, quantity: 1}) }}" class="btn btn-success">
                    Add to Cart
                </a>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
